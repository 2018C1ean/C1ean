<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">
    <com.example.dell.c1ean.Util.MyScrollView
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/user_background"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:scaleType="centerCrop"
                android:background="@mipmap/order_img_test"/>
            <RelativeLayout
                android:layout_marginTop="@dimen/orderMarginTop"
                android:id="@+id/r1"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <ImageView
                    android:layout_width="@dimen/typeImgSize"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/orderMarginTop"
                    android:src="@mipmap/jjyh"
                    android:layout_alignParentStart="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="@dimen/orderMarginTop"
                android:layout_below="@id/r1"
                android:id="@+id/r2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                >
                <ImageView
                    android:layout_width="@dimen/typeImgSize"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/orderMarginTop"
                    android:src="@mipmap/jjyh"
                    android:layout_alignParentStart="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="@dimen/orderMarginTop"
                android:layout_below="@id/r2"
                android:id="@+id/r3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                >
                <ImageView
                    android:layout_width="@dimen/typeImgSize"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/orderMarginTop"
                    android:src="@mipmap/jjyh"
                    android:layout_alignParentStart="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="@dimen/orderMarginTop"
                android:layout_below="@id/r3"
                android:id="@+id/r4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                >
                <ImageView
                    android:layout_width="@dimen/typeImgSize"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/orderMarginTop"
                    android:src="@mipmap/jjyh"
                    android:layout_alignParentStart="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="@dimen/orderMarginTop"
                android:layout_below="@id/r4"
                android:id="@+id/r5"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <ImageView
                    android:layout_width="@dimen/typeImgSize"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/orderMarginTop"
                    android:src="@mipmap/jjyh"
                    android:layout_alignParentStart="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="@dimen/orderMarginTop"
                android:layout_below="@id/r5"
                android:id="@+id/r6"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                >
                <ImageView
                    android:layout_width="@dimen/typeImgSize"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/orderMarginTop"
                    android:src="@mipmap/jjyh"
                    android:layout_alignParentStart="true"/>
            </RelativeLayout>
        </LinearLayout>
    </com.example.dell.c1ean.Util.MyScrollView>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">
<android.support.v7.widget.CardView
    android:layout_width="@dimen/activityImgWidth"
    android:layout_height="@dimen/activityCardHeight"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/activity_img"
            android:layout_width="@dimen/activityImgWidth"
            android:layout_height="@dimen/activityImgHeight"/>

        <TextView
            android:id="@+id/companyName"
            android:layout_width="@dimen/activityImgWidth"
            android:layout_height="wrap_content"
            android:layout_above="@id/activity_describe"
            android:background="@color/colorClearBlack"
            android:padding="5dp"
            android:text="洋洋家政"
            android:textSize="13sp"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/activity_describe"
            android:layout_width="@dimen/activityImgWidth"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_img"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:lines="1"
            android:textSize="@dimen/textSmall"
            android:text="全套家具清洁，专业家具保洁" />
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/marginBottom">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorOrange"
                android:text="￥"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_price"
            android:textColor="@color/colorOrange"
            android:text="45"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorOrange"
            android:text="/h"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/buyer_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="25"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="人已付款"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>

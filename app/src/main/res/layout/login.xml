<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/back"
        android:layout_width="35dp"
        android:background="@mipmap/left"
        android:layout_height="35dp" />
    <TextView
        android:layout_below="@id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:typeface="serif"
        android:text="@string/app_name"
        android:textColor="@color/colorTheme"
        android:textSize="50sp"/>
    <LinearLayout
        android:id="@+id/line1"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        android:padding="30dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="16sp"
    android:text="登入方式："/>
    <Spinner
        android:id="@+id/userType"
        android:textAlignment="textEnd"
        android:entries="@array/user_type"
        android:layout_width="130dp"
        android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/user"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/t1"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:hint="手机"
                android:layout_width="300dp"
                android:inputType="phone"
                android:lines="1"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center_vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/pwd"/>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/t2"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/password"
            android:layout_width="300dp"
            android:hint="密码"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:lines="1" />
    </android.support.design.widget.TextInputLayout></LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/login"
        android:layout_below="@id/line1"
        android:padding="10dp"
        android:text="登录"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/activityMarginTop"
        android:textColor="@color/colorWhite"
        android:layout_centerInParent="true"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="wrap_content"
        android:background="@drawable/label_shape"/>
</RelativeLayout>
